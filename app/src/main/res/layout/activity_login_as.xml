<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAs">

    <Button
        android:id="@+id/btnLoginAsDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="192dp"
        android:text="Login As Dealer" />

    <Button
        android:id="@+id/btnLoginAsUser"
        android:layout_below="@+id/btnLoginAsDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:text="Login As User"
        />

    <TextView
        android:id="@+id/textViewNewToRental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLoginAsUser"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="New to this Rental"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNewToRental"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:onClick="Sign"
        android:text="Sign up"
        />


</RelativeLayout>