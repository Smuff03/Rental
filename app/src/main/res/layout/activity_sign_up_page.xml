<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPage">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="61dp"
        android:text="Name:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/hintName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="54dp"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="121dp"
        android:text="Email:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/hintEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="103dp"

        android:layout_marginStart="148dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Enter your Email-ID" />

    <TextView
        android:id="@+id/mobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="179dp"
        android:text="Mobile No.:"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/hintMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="167dp"
        android:layout_marginStart="148dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Enter your mobile number" />

    <Button
        android:id="@+id/btnGenOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="241dp"
        android:layout_below="@+id/mobileNo"
        android:text="Generate Otp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/otp"
        android:layout_width="305dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="308dp"
        android:text="Enter your One Time Password"
        android:textSize="20dp"
        android:layout_below="@+id/btnGenOtp"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/hintOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp"
        android:hint="Enter OTP here"
        android:layout_marginStart="136dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnVerifyOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hintOtp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="10dp"
        android:onClick="openActivity"
        android:text="Verify"
        tools:ignore="OnClick" />


</RelativeLayout>

